<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head',{ title : "Dashboard" }) %>
<%- include('./partials/scritps') %>

  <body class="dashboard-body">

    <%- include('./partials/header-dashboard') %>

      <main class="container mt-3">
        <section class="row">
          <div class="col-12 col-md-10 mx-auto">
            <div class="card shadow rounded">
              <div class="card-header d-flex justify-content-between">
                <h4 class="card-title">Productos</h4>
                <a class="btn btn-outline-primary" href="#">Nuevo Producto</a>
              </div>
              <div class="p-3 pb-0">
                <table class="table table-striped">
                  <thead class="table-success">
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Descripci√≥n</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>


                    <% productos.forEach(({id, nombre, descripcion, imagen, precio})=> { %>
                      <tr>
                        <th scope="row">
                          <%= id %>
                        </th>
                        <td>
                          <%= nombre %>
                        </td>
                        <td>
                          <%= descripcion %>
                        </td>

                        <td>
                          <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                              data-bs-target="#exampleModal<%= id %>">
                              <i class="fa-solid fa-eye"></i></a>

                            <a class="btn btn-sm btn-outline-warning" href=""><i class="fa-solid fa-pencil"></i></a>

                            <a class="btn btn-sm btn-outline-danger" href=""><i class="fa-solid fa-trash"></i></a>

                            <%- include('./partials/modal-product-dashboard',{ id, nombre, descripcion, imagen, precio
                              }) %>
                          </div>
                        </td>

                      </tr>

                      <% }) %>


