<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head',{ title : "Dashboard" }) %>
  <%- include('./partials/scritps') %>
    <link rel="icon" type="image/x-icon" href="/images/favicon-dashboard.png">
    <title>Cancat - Dashboard</title>

    <body class="dashboard-body">

      <%- include('./partials/header-dashboard') %>

        <main class="container mt-3">
          <section class="row">

            <div class="col-12 card-header d-flex justify-content-center mb-4">
              <h3 class="card-title">Productos</h3>
            </div>

            <div class="dashboard_group_card gap-3">
              <% productos.forEach(({id, name, description, Image_products, price, product_species})=> { %>
                <div class=" carDashboar card  bg-light justify-content-between ">
                  <div >
                    <img class="mx-auto d-block my-3" src="/images/<%= Image_products[0].file || "ProductDefault.jpeg" %>" alt=""
                      style="max-width: 20%; max-height: 20%;">
                    <div class="col-12">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"> <strong>Id: </strong>
                          <%= id %>
                        </li>
                        <li class="list-group-item"> <strong>Nombre: </strong>
                          <%= name %>
                        </li>
                        <li class="list-group-item"> <strong> Descripcion: </strong>
                          <%= description %>
                        </li>
                        <li class="list-group-item"> <strong>Precio </strong>
                          <%= price %>
                        </li>
                        </li>
                        <li class="list-group-item mb-2"> <strong>Categoria </strong>
                          <%= product_species.name %>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="d-flex justify-content-around mb-3">
                    <a class="btn btn-sm btn-info col-4" href="/productos/editar-articulo/<%= id %>">Editar</a>

                    <button type="button" data-bs-toggle="modal" data-bs-target="#modalDelete<%= id %>"
                      class="btn btn-sm btn-primary col-4 align-bottom">Eliminar</button>
               

                  </div>
                </div>
                      <%- include('./partials/modal-delete-product', { id, name }) %>
            </div>

                </div>
            <% }) %>

          </section>
        </main>
    </body>

</html>