<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head',{ title : "Dashboard" }) %>
  <%- include('./partials/scritps') %>
    <link rel="icon" type="image/x-icon" href="/images/favicon-dashboard.png">
    <title>Cancat - Dashboard</title>

    <body class="dashboard-body">

      <%- include('./partials/header-dashboard') %>

        <main class="container mt-3">
          <section class="row">

            <div class="col-12 card-header d-flex justify-content-center mb-4">
              <h3 class="card-title">Productos</h3>
            </div>

            <div class="dashboard_group_card gap-3">
              <% productos.forEach(({id, name, description, Image_products, price, product_species})=> { %>
                <div class="carDashboar card d-flex flex-row justify-content-between bg-light  w-100" style="margin: -5px 150px;" >
                  <div class="d-flex col-8 flex-row" style="height: 90px;">
                    <img class="mx-auto d-block my-3" src="/images/<%= Image_products.length ? Image_products[0].file : "new-product.default.png" %>" alt=""
                      style="max-width: 20%; max-height: 0%; padding-left: 10px">
                    <div class="col-12 d-flex flex-direction-row mt-2">
                      <ul class="">
                        <li class="list-group-item"> <strong>Id: </strong>
                          <%= id %>
                        </li>
                        <li class="list-group-item"> <strong>Nombre: </strong>
                          <%= name %>
                        </li>
                        <!-- <li class="list-group-item"> <strong> Descripcion: </strong>
                          <%= description %>
                        </li>
                        <li class="list-group-item"> <strong>Precio </strong>
                          <%= price %>
                        </li>
                        </li>
                        <li class="list-group-item mb-2"> <strong>Categoria </strong>
                          <%= product_species.name %>
                        </li> -->
                      </ul>
                    </div>
                  </div>
                  <div class="d-flex mx-2  mt-2 gap-3">
                    <div>
                    <a class="btn btn-sm btn-warning pt-2" style="height: 35px;" href="/productos/editar-articulo/<%= id %>">Editar</a>

                    <button type="button mb-3" data-bs-toggle="modal" data-bs-target="#modalDelete<%= id %>"
                      class="btn btn-danger" style="height: 35px;" >Eliminar</button>
                      <div class="mt-1" >
                    <button type="button mb-3" data-bs-toggle="modal"
                    data-bs-target="#exampleModal<%= id %>"
                      class="btn btn-primary" style="height: 35px; width: 100%;" >Detalle</button>

                    </div>
                        
                      </div>



                  </div>
                </div>
                <%- include('./partials/modal-product-dashboard',{ id, name, description,Image_products, price
                }) %>
                      <%- include('./partials/modal-delete-product', { id, name }) %>
            </div>

                </div>
            <% }) %>

          </section>
        </main>
    </body>

</html>