<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs', { title: "Register" }) %>
<link rel="icon" type="image/x-icon" href="/images/favicon-login.png">
<title>Cancat - login</title>

<body>

    <%- include('../partials/header.ejs') %>

    <main class="login_main">
        <nav class="login-nav">
            <h1>Iniciar Sesion </h1>
            <form id="login-form" class="login_form" action="" method="POST">

                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input class="login-input <%= locals.errors && errors.email ? 'is-invalid' : '' %>" value="<%= locals.old && old.email ? old.email : '' %>"  type="text" id="email" name="email" >
                    <div class="box-alert">
                        <small id="alertLogin0" class="alert"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <div class="password-container">
                        <input class="login-input" class="<%= locals.errors && errors.email ? 'is-invalid' : '' %>" type="password" id="password" name="password" >
                        <span id="togglePassword" class="password-toggle">&#128065;</span>
                    </div>
                    <div class="box-alert">
                        <small id="alertLogin1" class="alert"><%= locals.errors && errors.password ? errors.password.msg : null %></small>
                    </div>
                </div>

                <div class="remember">
                    <input class="login-input"  type="checkbox" id="remember" name="remember" <%= locals.remember ? 'checked' : '' %>>
                    <label for="remember">Recordar Usuario</label>
                    <small class="alert-condiciones-small"><%= locals.errors && errors.remember ? errors.remember.msg : null %></small>
                </div>

                <button type="submit">Ingresar</button>
            </form>
            <div class="new-password">
                <a class="contraseña_olvidada" href="">¿Olvidaste tu contraseña?</a>
            </div>
            <form class="login_form2" action="/usuarios/registro" method="get">
                <div class="button-login">
                <button class ="login_form2" type="submit">Registrate</button>
                </div>
            </form>
        </nav>
    </main>

    <script>
        const passwordInput = document.getElementById('password');
        const togglePasswordButton = document.getElementById('togglePassword');

        togglePasswordButton.addEventListener('click', function () {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        });
    </script>
    <script src="/js/Users/validacion-login.js"></script>

   
    <%- include('../partials/footer') %>

</body>
</html>