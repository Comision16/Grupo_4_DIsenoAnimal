<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs' ,{ title : "Register" }) %>
    <link rel="icon" type="image/x-icon" href="/images/favicon-register.png">
    <title>Cancat - Registro</title>

    <body class="perfil_body">

        <%- include('../partials/header.ejs') %>

            <main class="perfil_main">
                <section>
                    <div class="uno">
                        <div>
                            <div class="perfil_titulo">
                                <h2>Perfil</h2>
                            </div>
                            <div class="perfil_titulo">
                                <h2>
                                    <%= locals.old && old.name ? old.name : name %>
                                </h2>
                            </div>
                        </div>
                        <div class="perfil_imagen_content">
                            <img class="perfil_imagen" src="/images/<%= imagen %>" alt="">
                        </div>
                    </div>
                    <form class="perfil_form" action="/usuarios/update/<%= id %>?_method=PUT" method="POST"
                        enctype="multipart/form-data">
                        <div>
                            <div class="perfil__form__div">
                                <div>
                                <input type="text" name="name" placeholder="Nombre y Apellido" minlength="8"
                                    maxlength="30" value="<%= locals.old && old.name ? old.name : name %>">

                                    <small class="perfil_alert" class="perfil_alert"><%= locals.errors && errors.name ? errors.name.msg : null %></small>
                                    
                                </div>
                                <div class="perfil___form__div">

                                <input type="email" name="email" placeholder="Correo electronico" minlength="5"
                                    maxlength="40" value="<%= locals.old && old.email ? old.email : email %>">

                                    <small class="perfil_alert" class="perfil_alert"><%= locals.errors && errors.email ? errors.email.msg : null %></small>

                                </div>

                            </div>
                            <div class="perfil__form__div">
                                <div>
                                    <input type="text" name="mascota" placeholder="Nombre Mascota"
                                    value="<%= locals.old && old.mascota ? old.mascota : mascota %>">

                                    <small class="perfil_alert" class="perfil_alert"><%= locals.errors && errors.mascota ? errors.mascota.msg : null %></small>

                                </div>

                                <div>

                                    <input type="text" name="especie" placeholder="Tipo de Mascota"
                                    value="<%= locals.old && old.especie ? old.especie : especie %>">

                                    <small class="perfil_alert" class="perfil_alert"><%= locals.errors && errors.especie ? errors.especie.msg : null %></small>

                                </div>
                            </div>
                        </div>

                        <div class="perfil_form_button">
                            <input name="imagen" type="file" class="form-control" id="imagen" hidden>
                            <label class="perfil__form__button" for="imagen">Cambiar Imagen</label>
                            <button type="submit">Cambiar datos</button>
                        </div>

                    </form>
                </section>
            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>