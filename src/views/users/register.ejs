<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs' ,{ 
        title : "Register" 
         }) %>
         <link rel="icon" type="image/x-icon" href="/images/favicon-register.png">
<title>Cancat - Registro</title>

    <body> 
        
        <%- include('../partials/header.ejs') %>

        <main class="register_main"> 
            <nav>
                <h1>Registrarse</h1>
                <form class="register_form" action="" method="POST">
                    <label for="name"></label>
                    <input 
                    type="text" id="name" name="name"
                    <%= locals.errors && errors.name ? 'is-invalid' : null %> placeholder="Nombre y Apellido"  minlength="8" maxlength="30"
                    value="<%= locals.old && old.name ? old.name : null %>">
                    <small><%= locals.errors && errors.name ? errors.name.msg : null %></small>

                    <label for="email"></label>
                    <input type="text" id="email" name="email" 
                    <%= locals.errors && errors.email ? 'is-invalid' : null %>placeholder="Correo electrónico"  minlength="5" maxlength="50"
                    value="<%= locals.old && old.email ? old.email : null %>">
                    <small ><%= locals.errors && errors.email ? errors.email.msg : null %></small>

                    <label for="password"></label>
                    <input type="password" id="password" name="password" 
                    <%= locals.errors && errors.password ? 'is-invalid' : null %> placeholder="Contraseña"  minlength="8" maxlength="12">
                    <small><%= locals.errors && errors.password ? errors.password.msg : null %></small>

                    <label for="password2"></label>
                    <input type="password" id="password2" name="password2" 
                    <%= locals.errors && errors.password2 ? 'is-invalid' : null %> placeholder="Confirmar contraseña"  minlength="8" maxlength="12">
                    <small><%= locals.errors && errors.password2 ? errors.password2.msg : null %></small>

                    <div>
                      <input type="checkbox" id="remember" value="1"  name="remember">
                      <label for="remember">Acepto los términos y condiciones:</label>
                    </div>
                    <small><%= locals.errors && errors.remember ? errors.remember.msg : null %></small>
                  </div>
                    </div>
                    
                    <button type="submit">Crear cuenta</button>
                  </form>
                  
            </nav>
        </main>
    
        <%- include('../partials/footer.ejs') %>

    </body>

</html>
