<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs' ,{ title : "Register" }) %>
    <link rel="icon" type="image/x-icon" href="/images/favicon-register.png">
    <title>Cancat - Registro</title>

    <body class="perfil_body">

        <%- include('../partials/header.ejs', {usuario}) %>

            <main class="reserva_main">
                <section>
                    <div class="Perfil_imagen_y_titulo">
                        <div>
                            <div class="perfil_titulo">
                                <h2>Reserva turno</h2>
                            </div>
                            <div class="perfil_titulo">
                                <h2>
                                    <%= locals.old && old.name ? old.name : usuario.name %>
                                </h2>
                            </div>
                        </div>
                        <div class="perfil_imagen_content">
                            <img class="perfil_imagen" src="/images/<%= usuario.image || " default.jpeg" %>" alt="">
                        </div>
                    </div>
                    <form id="reserva-form" class="perfil_form" action="" method="POST">
                        <div>
                            <div class="perfil__form__div">
                                <div>
                                    <label class="perfil_form_div_label" for="name">Nombre y Apellido</label>
                                    <input  class="perfil_form_input_select " type="text" name="name" id="name" placeholder="Nombre y Apellido"
                                        minlength="8" maxlength="30"
                                        value="<%= locals.old && old.name ? old.name : usuario.name %>">

                                    <small id="alert0" class="perfil_alert" class="perfil_alert">
                                        <%= locals.errors && errors.name ? errors.name.msg : null %>
                                    </small>

                                </div>
                                <div class="perfil___form__div">
                                    <label class="perfil_form_div_label" for="email">Correo electronico</label>
                                    <input readonly class="perfil_form_input_select " type="email" name="email" id="email" placeholder="Correo electronico"
                                        minlength="5" maxlength="40"
                                        value="<%= locals.old && old.email ? old.email : usuario.email %>" >

                                    <small  id="alert1" class="perfil_alert" class="perfil_alert">
                                        <%= locals.errors && errors.email ? errors.email.msg : null %>
                                    </small>

                                </div>

                            </div>
                            <div class="perfil__form__div">
                                <div>
                                    <label class="perfil_form_div_label" for="mascota">Nombre de Mascota</label>
                                    <input  class="perfil_form_input_select " type="text" name="mascota" id="mascota" placeholder="Nombre Mascota" value="<%= mascotas ? mascotas.name : "" %>">
                                    <input type="text" name="petId" id="petId" placeholder="Nombre Mascota" value="<%= mascotas ? mascotas.id : "" %>" hidden >

                                    <small  id="alert2" class="perfil_alert" class="perfil_alert">
                                        <%= locals.errors && errors.mascota ? errors.mascota.msg : null %>
                                    </small>

                                </div>

                                <div>
                                    <label class="perfil_form_div_label" for="especie">Tipo de Mascota</label>
                                  <select  class="perfil_form_input_select " name="especie" class="form-select" id="especie">
                                    <option value="" selected hidden></option>

                                    <% especies.forEach(item => { %>

                                     <option value="<%= item.id %>" <%= mascotas && (item.id && mascotas.specieId == item.id) && "selected" %> ><%= item.name %></option>
                                     
                                    <% }) %>
                                  </select>

                                    <small  id="alert4" class="perfil_alert">
                                        <%= locals.errors && errors.especies ? errors.especies.msg : null %>
                                    </small>

                                </div>
                            </div>
                            <div class="perfil__form__div">
                                <div>
                                    <label class="perfil_form_div_label reserva_date_label" for="fecha">Fecha</label>
                                    <input class="reserva_date perfil_form_input_select " type="date" id="fecha" name="fecha">
                                    <small  id="alert5" class="perfil_alert_small">
                                        <%= locals.errors && errors.fecha ? errors.fecha.msg : null %>
                                    </small>
                                </div>
                                <div class="perfil__form__div">
                                    <div>
                                        <label class="perfil_form_div_label reserva_date_label" for="hora">Hora</label>
                                        <input id="hora" min="09:00" max="18:00" step="1800" class="reserva_date perfil_form_input_select" type="time" name="hora" min="10:00:00" y max="17:00:00">
                                        <small  id="alert6" class="perfil_alert_small">
                                            <%= locals.errors && errors.hora ? errors.hora.msg : null %>
                                        </small>
                                    </div>
                                    
                                </div>
                                <div class="perfil__form__div">
                                    <div>
                                        <label class="perfil_form_div_label" for="service">Elije servicio</label>
                                      <select  class="perfil_form_input_select " name="service" class="form-select" id="service">
                                        <option value="" selected hidden>Elija su servicio</option>
    
                                        <% services.forEach(item => { %>
    
                                         <option value="<%= item.id %>" ><%= item.name %></option>
                                         
                                        <% }) %>
                                      </select>
    
                                        <small id="alert7" class="perfil_alert">
                                            <%= locals.errors && errors.especies ? errors.especies.msg : null %>
                                        </small>
    
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="perfil_form_button">
                            <button type="submit">Reservar turno</button>
                        </div>

                    </form>
                </section>
            </main>

            <%- include('../partials/footer.ejs') %>

            <script src="/js/Users/validacion-reserva.js"></script>

    </body>

</html>